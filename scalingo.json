{
  "name": "Metabase",
  "description": "The simplest, fastest way to get business intelligence and analytics to everyone in your company.",
  "website": "https://www.metabase.com/",
  "repository": "https://github.com/Scalingo/metabase-scalingo",
  "logo": "https://www.metabase.com/images/logo.svg",
  "env": {
    "BUILDPACK_URL": {
      "description": "Buildpack used to deploy Metabase",
      "value": "https://github.com/Scalingo/multi-buildpack.git",
      "required": true
    },
    "MAX_METASPACE_SIZE": {
      "description": "Control max memory available",
      "value": "512m"
    },
    "ENABLE_METABASE_CSV_PLUGIN": {
      "description": "Add plugin for csv",
      "value": "true"
    },
    "JAVA_OPTS": {
      "description": "Java options",
      "value": "-Xmx1536m"
    }
  },
  "addons": ["postgresql:postgresql-starter-512"]
}